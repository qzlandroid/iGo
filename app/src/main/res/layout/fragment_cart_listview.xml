<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:layout_marginTop="2dp">


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="48dp"
        android:layout_height="80dp"

        android:layout_gravity="center"
        android:background="@drawable/selector_checkbox_cart"
        android:button="@null" />

    <LinearLayout
        android:id="@+id/layout_goodsdescrip"
        android:layout_width="232dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textView_goodsname"
            android:layout_width="192dp"
            android:layout_height="32dp"
            android:text="商品名从数据库读取商品名此为测试名称00：包邮全场"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#EE1111" />

            <TextView
                android:id="@+id/textView_price"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:textColor="#EE1111"
                android:text="155" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×" />

            <TextView
                android:id="@+id/textView_count"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:text="N" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_cart_lv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_gravity="center"
        android:layout_row="0"
        android:src="#ffe1e1"
        android:text="结算"/>


</LinearLayout>
