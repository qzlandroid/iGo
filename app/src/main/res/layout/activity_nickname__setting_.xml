<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    android:layout_height="match_parent"
    tools:context="com.example.max.iGo.UserDefined.Nickname_Setting_Activity">
    <!--标题栏-->
    <include
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        layout="@layout/titlebar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">
        <Space
            android:layout_width="3dp"
            android:layout_height="wrap_content" />
        <EditText

            android:singleLine="true"
            android:paddingLeft="5dp"
            android:id="@+id/ev_nickname"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:cursorVisible="false"
            android:textCursorDrawable="@null"
            android:hint="请输入您的昵称"
            android:layout_weight="12" />

        <ImageView
            android:onClick="clear_data_nickname"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/register_rightno" />

    </LinearLayout>
    <Button
        android:id="@+id/save_nickname"
        android:onClick="save_nickname"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF06b5e2"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:text="保存"
        />


</LinearLayout>
