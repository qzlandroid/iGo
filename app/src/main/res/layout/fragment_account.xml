<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#05000000"
    tools:context="com.sdh.sdh.myapplication2.MainActivity">
    <RelativeLayout
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="#06b5e2">
        <LinearLayout
            android:id="@+id/after_login"
            android:layout_width="90dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_height="90dp">
            <com.example.max.iGo.Utils.CircleImageView
                android:id="@+id/account_head_sculpture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/touxing_comment"/>
            <TextView
                android:id="@+id/account_username_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="用户昵称"/>
        </LinearLayout>
            <ImageView
                android:id="@+id/account_login"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/account_loginregister_button" />



        <TextView
            android:id="@+id/fragment_account_tv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏的商品"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/fragment_account_tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:text="我的订单"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tv_zj"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的足迹"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/fragment_account_tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_above="@id/fragment_account_tv_order"
            android:layout_marginLeft="53dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_above="@id/fragment_account_tv_collection"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_above="@id/fragment_account_tv_order"
            android:layout_alignParentRight="true"
            android:layout_marginRight="53dp"
            android:textColor="#FFFFFF"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="107dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/account_top_slider"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="107dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/account_top_slider"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="4dp"
                android:src="@drawable/account_center_pay"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal">
            </ImageView>
            <ImageView
                android:layout_marginTop="4dp"
                android:src="@drawable/account_center_cargo"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal">
            </ImageView>
            <ImageView
                android:layout_marginTop="4dp"
                android:src="@drawable/account_center_comment"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="待收货"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="待评价"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:background="#05000000"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <ListView
            android:divider="#05000000"
            android:dividerHeight="10dp"
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

</LinearLayout>
